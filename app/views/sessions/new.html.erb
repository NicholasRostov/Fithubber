
<%= form_tag "/login", method: :post do %>


  
  <div class="login" data-lbg="purple">
    <!-- Login -->

    <div class="l-block toggled" id="l-login">
        <div class="lb-header palette-Teal bg">
            <i class="zmdi zmdi-account-circle"></i>
            Hi there! Please Sign in
        </div>

        <div class="lb-body">
            <div class="form-group fg-float">
                <div class="fg-line">
                    <input type="text" class="input-sm form-control fg-input" name="email" id="email">
                    <label class="fg-label"></label>
                </div>
            </div>

            <div class="form-group fg-float">
                <div class="fg-line">
                    <input type="password" class="input-sm form-control fg-input" name="password" id="password">
                    <label class="fg-label">Password</label>
                </div>
            </div>

            <button class="btn palette-Teal bg">Sign in</button>

            
            <div class="m-t-20">
                <a class="palette-Teal text d-block m-b-5" href="/signup">Create an account</a>           
            </div>
        </div>
    </div>
<% end %>